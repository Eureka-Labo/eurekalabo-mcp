{
  "name": "@eurekalabo/eurekaclaude",
  "version": "1.0.0",
  "description": "EurekaClaude - Task-driven development framework with Eureka Tasks integration",
  "type": "module",
  "bin": {
    "eurekaclaude": "./bin/eurekaclaude.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "install:global": "npm link",
    "uninstall:global": "npm unlink",
    "setup:hooks": "node dist/index.js hooks install --mode guidance",
    "setup:hooks:strict": "node dist/index.js hooks install --mode strict --force",
    "setup:skills": "node dist/index.js skills install all",
    "setup:all": "npm run build && npm run install:global && npm run setup:hooks && npm run setup:skills"
  },
  "keywords": [
    "eureka",
    "eurekaclaude",
    "framework",
    "task-management",
    "mcp",
    "claude",
    "development-workflow"
  ],
  "author": "Eureka Labo",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
